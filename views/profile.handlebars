<div class="profile-page">
  <h2>User Profile</h2>
  <p class="profile-created">Account created on: {{createdDate}}</p>

  <section class="profile-section">
    <h3>Username</h3>
    <p>{{username}}</p>
  </section>

  <section class="profile-section">
    <h3>Goals</h3>
    {{#if goals}}
  <ul>
    <li>Calories: {{goals.calorieGoal}}</li>
    <li>Protein: {{goals.proteinGoal}}</li>
    <li>Carbs: {{goals.carbsGoal}}</li>
    <li>Fat: {{goals.fatGoal}}</li>
    <li>Weight: {{goals.weight}} lbs</li>
    <li>Height: {{goals.height}} inches</li>
  </ul>
{{else}}
  <p>No macro goals set yet.</p>
{{/if}}
  </section>

  <section class="profile-section">
    <h3>Workout History</h3>
    {{#if workouts.length}}
      <ul>
        {{#each workouts}}
          <li>{{this.group}} - {{this.date}}</li>
        {{/each}}
      </ul>
    {{else}}
      <p><em>No workouts logged.</em></p>
    {{/if}}
  </section>

  <section class="profile-section">
    <h3>Currently Saved Workout Splits</h3>
    {{#if splits.length}}
      <div class="split-buttons">
        <ul>
          {{#each splits}}
            <li>
              <strong>Group:</strong> {{this.group}}<br>
              <strong>Exercises:</strong>
              <ul>
                {{#each this.exercises}}
                  <li>{{this}}</li>
                {{/each}}
              </ul>
            </li>
          {{/each}}
        </ul>
      </div>
    {{else}}
      <p><em>No splits defined.</em></p>
    {{/if}}
  </section>
</div>
