<div class="login-wrapper">
  <div class="login-box">
    {{#if errors}}
      <ul class="error-list">
        {{#each errors}}
          <li>{{this}}</li>
        {{/each}}
      </ul>
    {{else if error}}
      <p class="error-message">{{error}}</p>
    {{/if}}

    <form id="signin-form" action="/login" method="POST">
      <div>
        <label for="userId">User ID:</label>
        <input type="text" id="userId" name="userId" />
      </div>
      <div>
        <label for="password">Password:</label>
        <input type="password" id="password" name="password" />
      </div>
      <button type="submit" id="submit_button" name="submit_button">Sign In</button>
    </form>

    <p>
      <a href="/register">Click here to signup!</a>
    </p>
    <p>
      <a href="/">Return Home</a>
    </p>

    {{!-- Display any error message passed from the server --}}
    {{#if error}}
      <p class="error-message">{{error}}</p>
    {{/if}} 
  </div>
</div>
