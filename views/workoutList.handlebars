<link rel="stylesheet" href="/css/styles.css">
<div class="page-container">
  <h1 class="page-title">{{#if isDelete}}Remove{{else}}Edit{{/if}} Workout</h1>

  <ul class="workout-list">
    {{#each workouts}}
      <li class="workout-item">
        <span>{{this.username}} - {{this.group}}</span>
        {{#if ../isDelete}}
          <form method="POST" action="/workouts/delete/{{this._id}}" style="display:inline;">
            <button class="form-button" type="submit">❌ Remove</button>
          </form>
        {{else}}
          <a href="/workouts/edit/{{this._id}}" class="form-button">📝 Edit</a>
        {{/if}}
      </li>
    {{/each}}
  </ul>
</div>