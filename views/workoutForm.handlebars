<!-- views/workoutForm.handlebars -->
<link rel="stylesheet" href="/css/styles.css">
<div class="page-container">
  <h1 class="page-title">Add/Edit Workout</h1>

  <form class="workout-form" method="POST" action="/workouts/add">
    <input class="input-field" type="text" name="username" placeholder="Name" required>

    <select class="dropdown-field" name="group">
      <option value="">Muscle Group</option>
      <option>Chest</option>
      <option>Back</option>
      <option>Push</option>
      <option>Pull</option>
      <option>Legs</option>
      <option>Abs</option>
      <option>Upper</option>
      <option>Lower</option>
      <option>Full</option>
    </select>

    <input class="input-field" type="text" name="time" placeholder="e.g. 1h 15min" required>

    <textarea class="textarea-field" name="exercises" placeholder='[{"name":"Bench Press","sets":4,"reps":10,"weight":135}]' required></textarea>

    <button class="form-button" type="submit">Save Workout</button>
  </form>
</div>
